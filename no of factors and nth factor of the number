import java.util.ArrayList;
import java.util.List;
import java.util.Scanner;
public class Factors {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        System.out.print("Enter a number: ");
        int number = scanner.nextInt();
        System.out.print("Enter the nth factor to find: ");
        int n = scanner.nextInt();
        List<Integer> factors = findFactors(number);
        int numberOfFactors = factors.size();

        System.out.println("The number of factors of " + number + " is: " + numberOfFactors);

        if (n > 0 && n <= numberOfFactors) {
            System.out.println("The " + n + "th factor is: " + factors.get(n - 1));
        } else {
            System.out.println("Invalid input for nth factor.");
        }
        scanner.close();
    }
    public static List<Integer> findFactors(int number) {
        List<Integer> factors = new ArrayList<>();
        for (int i = 1; i <= number; i++) {
            if (number % i == 0) {
                factors.add(i);
            }
        }
        return factors;
    }
}
